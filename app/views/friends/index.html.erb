<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Friends</h1>

      <ul class="list-group">
        <% @friends.each do |friend| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= friend.attendee.try(:full_name) %>
            <%= link_to "Remove", friend_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Add Friend</h2>
          <%= form_tag friends_path, method: :post, class: "mb-3" do %>
            <div class="form-group">
              <%= label_tag :friend_full_name, "Friend Full Name" %>
              <%= text_field_tag :friend_full_name, nil, class: "form-control" %>
            </div>
            <%= submit_tag "Add Friend", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
