<div class="container">
  <div class="simple-calendar">
    <div class="calendar-heading my-2 text-left"> <!-- Changed text-center to text-left -->
      <span class="calendar-title btn btn-primary custom-calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span> <!-- Added custom-calendar-title class -->
    </div>

    <div class="calendar-navigation d-flex justify-content-between align-items-center">
      <%= link_to calendar.url_for_previous_view, class: 'chevron-left' do %>
        <i class="fas fa-chevron-left chevron-custom"></i>
      <% end %>

      <table class="table table-striped">
        <thead>
          <tr>
            <% date_range.slice(0, 7).each do |day| %>
              <th><%= t('date.abbr_day_names')[day.wday] %></th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% date_range.each_slice(7) do |dates| %>
            <tr>
              <% dates.each do |date| %>
                <%= content_tag :td, class: calendar.td_classes_for(date) do %>
                  <% passed_block.call date.day, sorted_events.fetch(date, []) %>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to calendar.url_for_next_view, class: 'chevron-right' do %>
        <i class="fas fa-chevron-right chevron-custom"></i>
      <% end %>
    </div>
  </div>
</div>
