<div class="container">
  <h1 class="text-center my-4 font-weight-bold" id="title">Notifications</h1>
  <% if @notifications.any? %>
    <% @notifications.each do |notification| %>
    <% if !notification.read? %>
      <%= render 'partials/notification_index', notification: notification %>
      <% end %>
    <% end %>
  <% else %>
    <p>No notifications found.</p>
  <% end %>

</div>
