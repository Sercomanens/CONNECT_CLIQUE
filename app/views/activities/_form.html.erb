<%= form_with(model: activity, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :date_1 %>
    <%= form.datetime_select :date_1 %>
  </div>

  <div class="field">
    <%= form.label :date_2 %>
    <%= form.datetime_select :date_2 %>
  </div>

  <div class="field">
    <%= form.label :date_3 %>
    <%= form.datetime_select :date_3 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
