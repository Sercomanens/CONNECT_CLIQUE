<%= form_with(model: activity, local: true, class: 'activity-form') do |form| %>
  <div class="field">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :address, class: 'form-label' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :date_1, class: 'form-label' %>
    <%= form.datetime_select :date_1, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :date_2, class: 'form-label' %>
    <%= form.datetime_select :date_2, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :date_3, class: 'form-label' %>
    <%= form.datetime_select :date_3, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Activity', class: 'btn btn-light' %>
  </div>
<% end %>
