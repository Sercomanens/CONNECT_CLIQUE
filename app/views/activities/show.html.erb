  <%= link_to 'Edit', edit_activity_path(@activity) %> |
<% end  %>
<%= link_to 'Back', activities_path %> |
<%= link_to 'Vote', new_activity_vote_path(@activity) %>

<p>Most Voted Date: <%= @activity.most_voted_date %></p>
</div>
