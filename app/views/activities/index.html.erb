<div class="container activities-container">
  <div class="search-header text-center">
    <h2>Discover Activities</h2>
    <p class="mb-4">Find a specific activity below <span style="color: #fdd835;">ðŸ‘‡</span></p>
  </div>

  <!-- Search form -->
  <div class="search-form mb-4">
    <%= form_with url: activities_path, method: :get, local: true, html: { class: "form-inline" } do |form| %>
      <%= form.text_field :query, placeholder: "Search activities...", class: "form-control" %>
    <% end %>
  </div>

  <!-- Flash messages -->
  <% flash.each do |key, message| %>
    <div class="flash <%= key %>">
      <%= message %>
    </div>
  <% end %>

  <% if @activities.present? %>
    <div class="cards-grid">
      <% @activities.each do |activity| %>
        <%= link_to activity_path(activity), class: "text-decoration-none" do %>
          <%= render partial: 'partials/cards', locals: { activity: activity } %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
