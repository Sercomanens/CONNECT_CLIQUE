<div class="container activities-container">
    <h1>Activities</h1>
    <table class="activities-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Address</th>
          <th>Date 1</th>
          <th>Date 2</th>
          <th>Date 3</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.name %></td>
            <td><%= activity.description %></td>
            <td><%= activity.address %></td>
            <td><%= activity.date_1 %></td>
            <td><%= activity.date_2 %></td>
            <td><%= activity.date_3 %></td>
            <td><%= link_to 'Show', activity %></td>
            <td>
              <% if policy(activity).edit? %>
                <%= link_to 'Edit', edit_activity_path(activity) %>
              <% end %>
            </td>
            <td>
              <% if policy(activity).destroy? %>
                <%= link_to 'Destroy', activity_path(activity), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
